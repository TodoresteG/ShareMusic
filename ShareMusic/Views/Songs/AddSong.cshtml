@model AddSongInputModel
@{
    ViewData["Title"] = "Add Song";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center m-md-3">@ViewData["Title"]</h1>
        <section>
            <form asp-controller="Songs" asp-action="AddSong" method="post">
                <h4 class="text-center">Add new song to the database.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Artist"></label>
                    <input asp-for="Artist" class="form-control" />
                    <span asp-validation-for="Artist" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Song"></label>
                    <input asp-for="Song" class="form-control" />
                    <span asp-validation-for="Song" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Add Song" />
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}