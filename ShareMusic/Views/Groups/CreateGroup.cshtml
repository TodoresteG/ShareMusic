@model CreateGroupInputModel
@{
    ViewData["Title"] = "CreateGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<asp:Content ID="MultiSelectContent" runat="server" ContentPlaceHolderID="MultiSelectContent">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
</asp:Content>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center m-md-3">@ViewData["Title"]</h1>
        <section>
            <form asp-controller="Groups" asp-action="CreateGroup" method="post">
                <h4 class="text-center">Add new song to the database.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <vc:users-list></vc:users-list>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Create Group" />
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="~/js/createGroup.js"></script>
}